<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.MainActivity"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_margin="@dimen/margin_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/repo_details_repo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="GitHubApp"
                style="@style/text_title"
                />

            <TextView
                android:id="@+id/repo_details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="GitHubApp"
                style="@style/text_default"
                android:layout_marginBottom="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_default"
                />

            <TextView
                android:id="@+id/repo_details_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="GitHubApp"
                style="@style/text_title"
                android:gravity="center"
                />

        </LinearLayout>


    </ScrollView>

    <ImageView
        android:layout_margin="@dimen/margin_default"
        android:layout_gravity="bottom|center"
        android:id="@+id/repo_details_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/homeAsUpIndicator"
        android:contentDescription="@string/content_description_button_back"
        />

</FrameLayout>