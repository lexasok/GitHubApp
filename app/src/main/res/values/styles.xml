<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!--Text-->
    <style name="text_default">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="text_default_light">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/text_default_light</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="text_title_light">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_title_light</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

</resources>
